{
  "name": "@aspectjs/parent",
  "private": true,
  "version": "0.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NicolasThierion/aspectjs.git"
  },
  "sideEffects": false,
  "scripts": {
    "build": "lerna run build --since --stream",
    "test": "lerna run test --since --stream",
    "test:integration": "lerna run test:integration --since",
    "typings": "lerna run typings --since --stream",
    "clean": "lerna run clean --since --stream",
    "dev": "yarn docs:dev && nodemon  --ignore **/dist/  **/dist/ --ext ts --exec 'npm run lint:auto && npm run test && npm run size'",
    "size": "lerna run size --since",
    "lint:auto": "eslint -c ./.eslintrc.js --ignore-path .gitignore '**/*.{ts,tsx}' --quiet --fix",
    "lint": "eslint -c ./.eslintrc.js --ignore-path .gitignore '**/*.{ts,tsx}' --quiet",
    "release": "lerna version",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs"
  },
  "workspaces": [
    "packages/**"
  ],
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@microsoft/api-extractor": "^7.10.4",
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@size-limit/preset-big-lib": "^4.5.4",
    "@types/jasmine": "^3.4.0",
    "@types/jsdom": "^16.2.5",
    "@types/lodash": "^4.14.149",
    "@types/markdown-it": "^10.0.1",
    "@types/node": "^14.0.22",
    "@types/npm-run": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^4.8.0",
    "@typescript-eslint/parser": "^4.8.0",
    "@vuepress/plugin-active-header-links": "^1.3.1",
    "@vuepress/plugin-back-to-top": "^1.3.1",
    "ansi-colors": "^4.1.1",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "estimo": "^2.0.4",
    "husky": "^4.2.1",
    "jasmine": "^3.4.0",
    "jasmine-console-reporter": "^3.1.0",
    "jsdom": "^16.4.0",
    "lerna": "^3.20.2",
    "lodash": "^4.17.19",
    "markdown-it-container": "^3.0.0",
    "mv": "^2.1.1",
    "node-sass": "^5.0.0",
    "nodemon": "^2.0.2",
    "npm-run": "^5.0.1",
    "nyc": "^15.0.0",
    "postscribe": "^2.0.8",
    "prettier": "^2.0.5",
    "reflect-metadata": "^0.1.13",
    "rollup": "^2.21.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-cleaner": "^1.0.0",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-sourcemaps": "^0.6.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.29.0",
    "rollup-plugin-visualizer": "^4.0.4",
    "sass-loader": "^10.1.0",
    "size-limit": "^4.5.4",
    "source-map-support": "^0.5.16",
    "ts-loader": "^8.0.11",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "tslib": "^2.0.3",
    "typescript": "^4.0.5",
    "vuepress": "^1.5.2",
    "vuepress-bar": "^0.3.1",
    "vuepress-plugin-code-copy": "^1.0.6",
    "vuepress-plugin-reading-progress": "^1.0.8"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "commitlint -eq > /dev/null 2>&1 || (exec < /dev/tty && git cz --hook || true)",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
