{
  "name": "@aspectjs/parent",
  "private": true,
  "version": "0.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NicolasThierion/aspectjs.git"
  },
  "sideEffects": false,
  "scripts": {
    "build": "lerna run build --since --stream",
    "test": "yarn build && lerna run test --since --stream",
    "test:integration": "lerna run test:integration --since",
    "dev": "yarn docs:dev && nodemon  --ignore **/dist/ --ext ts --exec 'npm run lint:auto && npm run test && npm run size'",
    "size": "lerna run size --since",
    "lint:auto": "eslint -c ./.eslintrc.js --ignore-path .gitignore '**/*.{js,ts,tsx}' --quiet --fix",
    "lint": "eslint -c ./.eslintrc.js --ignore-path .gitignore '**/*.{js,ts,tsx}' --quiet",
    "release": "lerna version",
    "docs:dev": "vuepress dev . --temp .temp --no-cache",
    "docs:build": "vuepress build ."
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@size-limit/preset-big-lib": "^4.4.5",
    "@types/ansi-colors": "^3.2.2",
    "@types/jasmine": "^3.4.0",
    "@types/lodash": "^4.14.149",
    "@types/markdown-it": "^10.0.1",
    "@types/node": "^12.7.5",
    "@types/npm-run": "^5.0.0",
    "@types/rollup": "^0.54.0",
    "@typescript-eslint/eslint-plugin": "^2.11.0",
    "@typescript-eslint/parser": "^2.11.0",
    "@vuepress/plugin-active-header-links": "^1.3.1",
    "@vuepress/plugin-back-to-top": "^1.3.1",
    "ansi-colors": "^4.1.1",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "estimo": "^2.0.4",
    "husky": "^4.2.1",
    "jasmine": "^3.4.0",
    "jasmine-console-reporter": "^3.1.0",
    "jasmine-ts": "^0.3.0",
    "jsdom": "^16.2.1",
    "lerna": "^3.20.2",
    "lodash": "^4.17.15",
    "markdown-it-container": "^3.0.0",
    "node-sass": "^4.14.1",
    "nodemon": "^2.0.2",
    "npm-run": "^5.0.1",
    "nyc": "^15.0.0",
    "postscribe": "^2.0.8",
    "prettier": "^1.19.1",
    "reflect-metadata": "^0.1.13",
    "rollup": "^1.31.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-cleaner": "^1.0.0",
    "rollup-plugin-sourcemaps": "^0.6.2",
    "rollup-plugin-terser": "^5.2.0",
    "rollup-plugin-typescript2": "^0.25.3",
    "rollup-plugin-visualizer": "^3.3.1",
    "size-limit": "^4.4.5",
    "source-map-support": "^0.5.16",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.3.0",
    "tslib": "^1.10.0",
    "typescript": "^3.7.5",
    "vuepress": "^1.4.1",
    "vuepress-bar": "^0.2.3",
    "vuepress-plugin-code-copy": "^1.0.6",
    "vuepress-plugin-element-tabs": "^0.2.8",
    "vuepress-plugin-reading-progress": "^1.0.8"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "commitlint -eq > /dev/null 2>&1 || exec < /dev/tty && git cz --hook || true",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "yarn": "^1.22.0"
  }
}
