{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "esModuleInterop": true,
    "declaration": true,
    "composite": true,
    "declarationMap": true,
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "lib": [
      "es2019.array"
    ],
    "types": ["reflect-metadata", "jasmine", "node"],
    "target": "es6",
    "baseUrl": "packages",
    "paths": {
      "@aspectjs/core": ["core/public_api.ts"],
      "@aspectjs/core/annotations": ["core/annotations/public_api.ts"],
      "@aspectjs/core/commons": ["core/commons/public_api.ts"],
      "@aspectjs/core/utils": ["core/utils/public_api.ts"]
    }
  },
   "exclude": [
     "dist",
     "**/node_modules/*"
  ],
  "include": [
    "node_modules/@types/node/globals.d.ts"
  ]
}
