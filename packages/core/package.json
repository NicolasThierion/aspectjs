{
  "name": "@aspectjs/core",
  "version": "1.1.0",
  "description": "decorator-based AOP made simple for javascript & typescript",
  "keywords": [
    "decorator",
    "annotation",
    "typescript",
    "aspect",
    "AOP"
  ],
  "author": "Nicolas Thierion <thierion.nicolas@gmail.com>",
  "homepage": "https://nicolasthierion.github.io/aspectjs/#/",
  "license": "MIT",
  "main": "dist/bundles/core.umd.js",
  "unpgk": "dist/bundles/core.umd.min.js",
  "module": "dist/esm/core.mjs",
  "sideEffects": false,
  "typings": "dist/esm/public_api.d.ts",
  "scripts": {
    "build": "rollup --config ./rollup.config.js",
    "test": "nyc jasmine-ts --config=jasmine.json",
    "dev": "nodemon  --ignore **/dist/ --ext ts --exec 'npm run lint:auto && npm run test && npm run size'",
    "test:integration": "yarn build && cd tests/angular && yarn install && yarn add ../../ && yarn test",
    "size": "rollup --config ./rollup.config.js && size-limit",
    "lint:auto": "eslint -c ./.eslintrc.js --ignore-path .gitignore '**/*.{js,ts,tsx}' --quiet --fix",
    "lint": "eslint -c ./.eslintrc.js --ignore-path .gitignore '**/*.{js,ts,tsx}' --quiet"
  },
  "directories": {
    "lib": "src",
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NicolasThierion/aspectjs.git"
  },
  "bugs": {
    "url": "https://github.com/NicolasThierion/aspectjs/issues"
  },
  "devDependencies": {
    "@size-limit/preset-big-lib": "^4.5.4",
    "size-limit": "^4.5.4"
  },
  "size-limit": [
    {
      "limit": "400 ms",
      "path": "dist/esm/core.mjs"
    }
  ]
}
