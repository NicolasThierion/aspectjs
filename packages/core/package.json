{
  "name": "@aspectjs/core",
  "version": "1.1.0",
  "description": "AOP made simple for javascript & typescript, based on decorators",
  "keywords": [
    "decorator",
    "annotation",
    "typescript",
    "aspect",
    "AOP"
  ],
  "author": "Nicolas Thierion <thierion.nicolas@gmail.com>",
  "homepage": "https://nicolasthierion.github.io/aspectjs/#/",
  "license": "MIT",
  "main": "dist/bundles/umd/core.umd.js",
  "unpkg": "dist/bundles/umd/core.umd.min.js",
  "module": "dist/bundles/fesm2015/core.js",
  "fesm2015": "dist/bundles/fesm2015/core.js",
  "esm2015": "dist/bundles/esm2015/public_api.js",
  "sideEffects": false,
  "typings": "dist/core.d.ts",
  "scripts": {
    "build": "rm -rf dist && yarn typings && rollup --config ./rollup.config.js",
    "typings": "tsc --build tsconfig.types.json && api-extractor run --local --verbose",
    "test": "nyc jasmine --config=jasmine.json",
    "dev": "nodemon  --ignore **/dist/ --ext ts --exec 'npm run lint:auto && npm run test && npm run size'",
    "size": "size-limit",
    "lint:auto": "eslint -c ./.eslintrc.js --ignore-path .gitignore '**/*.{js,ts,tsx}' --quiet --fix",
    "lint": "eslint -c ./.eslintrc.js --ignore-path .gitignore '**/*.{js,ts,tsx}' --quiet"
  },
  "files": [
    "dist/*"
  ],
  "directories": {
    "lib": "src",
    "test": "internals/testing",
    "dist": "dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NicolasThierion/aspectjs.git"
  },
  "bugs": {
    "url": "https://github.com/NicolasThierion/aspectjs/issues"
  },
  "devDependencies": {
    "@size-limit/preset-big-lib": "^4.5.4",
    "size-limit": "^4.5.4"
  },
  "size-limit": [
    {
      "limit": "400 ms",
      "path": [
        "dist/bundles/umd/core.umd.min.js",
        "commons/dist/bundles/umd/commons.umd.min.js",
        "utils/dist/bundles/umd/utils.umd.min.js",
        "annotations/dist/bundles/umd/annotations.umd.min.js"
      ]
    }
  ]
}
