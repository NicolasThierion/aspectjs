{
  "extends": "../../tsconfig.json",
  "include": [
    "src/**/*.ts",
    "public_api.ts",
    "node_modules/@types/node/globals.d.ts"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/dist",
    "**/rollup.config.ts"
  ],

  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@aspectjs/core": ["public_api.ts"],
      "@aspectjs/core/annotations": ["annotations/public_api.ts"],
      "@aspectjs/core/commons": ["commons/public_api.ts"],
      "@aspectjs/core/utils": ["utils/public_api.ts"]
    }
  },
  "references": [
    { "path": "commons" },
    { "path": "annotations" },
    { "path": "utils" }
  ]
}
